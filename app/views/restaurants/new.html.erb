<div class="container">
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::LIST %>
    <%= f.submit "#{ @restaurant.persisted? ? 'Update' : 'Create' } my restaurant", class: 'btn btn-primary' %>
  <% end %>

  <%= link_to "Back to restaurants", restaurants_path %>
</div>
